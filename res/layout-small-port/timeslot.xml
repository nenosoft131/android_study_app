<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

    <TextView
            android:id="@+id/txt_stoptime"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_end_time"
            android:layout_alignBottom="@+id/btn_end_time"
            android:layout_alignLeft="@+id/txt_starttime"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_end_time"
            android:layout_below="@+id/btn_end_time"/>

    <Button
            android:id="@+id/btn_end_time"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@+id/btn_start_time"
            android:layout_below="@+id/btn_start_time"
            android:layout_marginTop="18dp"
            android:background="@drawable/blankbtn"
            android:onClick="endtime"
            android:text="End Time"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/txt_dayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/txt_starttime"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"/>

    <Button
            android:id="@+id/btn_start_time"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignBaseline="@+id/txt_starttime"
            android:layout_alignBottom="@+id/txt_starttime"
            android:layout_alignParentRight="true"
            android:background="@drawable/blankbtn"
            android:onClick="starttime"
            android:text="Start Time"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

</RelativeLayout>