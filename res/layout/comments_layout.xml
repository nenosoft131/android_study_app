<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dip">

    <ImageView
            android:id="@+id/iv_comments_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/picture_man"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_comments_image"
            android:layout_below="@+id/iv_comments_image"
            android:layout_marginTop="15dip"
            android:text="comment :"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_comments_image"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@+id/textView3"
            android:text=".."
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_comments_image"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/iv_comments_image"
            android:text="Name :"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_comments_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/textView1"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_comments_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textView1"
            android:layout_marginTop="10dip"
            android:text="TextView"
            android:layout_alignLeft="@+id/textView1"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

</RelativeLayout>